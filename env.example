# Sentinel Fraud Detection System - Environment Configuration
# Copy this file to .env and update the values according to your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Sentinel Fraud Detection
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000","http://127.0.0.1:8000"]
ALLOWED_HOSTS=["localhost","127.0.0.1","*"]

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_URL=postgresql://sentinel:password@localhost:5432/sentinel_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# PostgreSQL Connection Details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sentinel_db
POSTGRES_USER=sentinel
POSTGRES_PASSWORD=password

# =============================================================================
# REDIS SETTINGS
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# KAFKA SETTINGS
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_TRANSACTIONS=transactions
KAFKA_TOPIC_ALERTS=fraud_alerts
KAFKA_GROUP_ID=sentinel_consumer
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true

# Zookeeper Settings
ZOOKEEPER_HOST=localhost
ZOOKEEPER_PORT=2181

# =============================================================================
# MACHINE LEARNING SETTINGS
# =============================================================================
MODEL_PATH=data/models
MODEL_UPDATE_INTERVAL=3600
CONFIDENCE_THRESHOLD=0.8
FRAUD_THRESHOLD=0.7

# Model Training Settings
TRAINING_BATCH_SIZE=64
TRAINING_EPOCHS=100
TRAINING_LEARNING_RATE=0.001
TRAINING_VALIDATION_SPLIT=0.2

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_EXPLAINABILITY=true
ENABLE_FEEDBACK_LOOP=true
ENABLE_PLUGIN_SYSTEM=true
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_BATCH_PROCESSING=true

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
ENABLE_PROFILING=false

# Prometheus Settings
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=100
RATE_LIMIT_ENABLED=true

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE=104857600
UPLOAD_DIR=data/uploads
ALLOWED_FILE_TYPES=["csv","json","parquet","xlsx"]

# =============================================================================
# CACHE SETTINGS
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# =============================================================================
# ALERTING SETTINGS
# =============================================================================
ALERT_RETENTION_DAYS=90
ALERT_BATCH_SIZE=100
ALERT_EMAIL_ENABLED=false
ALERT_SLACK_ENABLED=false

# Email Settings (if enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Slack Settings (if enabled)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#fraud-alerts

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
BATCH_PROCESSING_SIZE=1000
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
WORKER_TIMEOUT=60

# =============================================================================
# EXTERNAL API SETTINGS
# =============================================================================
# Fraud Detection APIs
EXTERNAL_FRAUD_API_ENABLED=false
EXTERNAL_FRAUD_API_URL=https://api.fraudservice.com
EXTERNAL_FRAUD_API_KEY=your-api-key

# IP Geolocation API
IP_GEO_API_ENABLED=false
IP_GEO_API_URL=https://ipapi.co
IP_GEO_API_KEY=your-api-key

# =============================================================================
# TESTING SETTINGS
# =============================================================================
TESTING_ENABLED=false
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/sentinel_test
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# Docker Settings
DOCKER_ENABLED=true
DOCKER_IMAGE_NAME=sentinel-fraud-detection
DOCKER_IMAGE_TAG=latest

# Kubernetes Settings (if applicable)
KUBERNETES_ENABLED=false
KUBERNETES_NAMESPACE=sentinel
KUBERNETES_REPLICAS=3

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# =============================================================================
# PLUGIN SETTINGS
# =============================================================================
PLUGIN_DIR=plugins
PLUGIN_AUTO_LOAD=true
PLUGIN_VALIDATION=true

# =============================================================================
# FRONTEND SETTINGS
# =============================================================================
FRONTEND_PORT=3000
FRONTEND_API_URL=http://localhost:8000
FRONTEND_ENABLE_ANALYTICS=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# AWS Settings (if using AWS services)
AWS_ENABLED=false
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=sentinel-data

# Google Cloud Settings (if using GCP)
GCP_ENABLED=false
GCP_PROJECT_ID=your-project-id
GCP_CREDENTIALS_FILE=path/to/credentials.json

# Azure Settings (if using Azure)
AZURE_ENABLED=false
AZURE_CONNECTION_STRING=your-connection-string
AZURE_CONTAINER_NAME=sentinel-data
